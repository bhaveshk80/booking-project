<% layout("/layouts/boilerplate") %>
<body>
    
    
    <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a New listing</h3>
                <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input 
                    name="listing[title]" 
                    placeholder="Add title" 
                    type="text" 
                    class="form-control"
                    required/> 
                    <div class="valid-feedback">Title looks good</div>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" placeholder="Enter description" type="text" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter short description</div>
                </div>
                <div class="mb-3">
                    <lable for="image" class="form-label">Upload Image</lable>
                    <input name="listing[image]"  type="file" class="form-control" 
                    required>
                </div>
                <div class="row">
                    <div class="mb-3 col-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" placeholder="Enter price"  class="form-control" required>
                        <div class="invalid-feedback">Price required </div>
                    </div>

                    <div class="mb-3 col-8">
                        <lable for="country" class="form-label">country</lable>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                        <div class="invalid-feedback">Enter country name </div>
                    </div>
                    
                </div>
                <div class="mb-3 ">
                    <lable for="location" class="form-label">location</lable>
                    <input name="listing[location]" placeholder="Pune, Maharastra" type="text" class="form-control" required>
                    <div class="invalid-feedback">Enter your location </div>
                </div>
                <button class="btn btn-dark add-btn">Add</button>
            </div>
        </div>
    </form>
</body>
