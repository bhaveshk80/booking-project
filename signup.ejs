<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3"> Signup on Destination</h1>
    <div class="col-8 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <lable for="username" class="form-label">username</lable>
                <input 
                name="username" 
                placeholder="Username" 
                id="Username" 
                type="text" 
                class="form-control"
                required/> 
                <div class="valid-feedback">username looks good</div>
            </div>
            <div class="mb-3">
                <lable for="email" class="form-label">Email</lable>
                <input Us
                name="email" 
                placeholder="Email" 
                id="email" 
                type="text" 
                class="form-control"
                required/> 
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <lable for="password" class="form-label">Password</lable>
                <input 
                name="password" 
                placeholder="password" 
                id="password" 
                type="text" 
                class="form-control"
                required/> 
                <div class="valid-feedback">username looks good</div>
            </div>
            <button class="btn btn-dark">SignUp</button>
        </form>
    </div>    
</div>    